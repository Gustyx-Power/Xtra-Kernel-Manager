<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="#85000000"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/transparent">

        <!-- FPS - Most important, bigger -->
        <TextView
            android:id="@+id/tvFps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS: 120"
            android:textColor="#00FF00"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:paddingBottom="6dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30FFFFFF"
            android:layout_marginBottom="6dp" />

        <!-- CPU -->
        <TextView
            android:id="@+id/tvCpuFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU: 2500 MHz"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingVertical="2dp" />

        <!-- GPU -->
        <TextView
            android:id="@+id/tvGpuFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPU: 950 MHz"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingVertical="2dp" />

        <!-- Temperature -->
        <TextView
            android:id="@+id/tvCpuTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp: 45Â°C"
            android:textColor="#FFB300"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingVertical="2dp" />

        <!-- RAM -->
        <TextView
            android:id="@+id/tvRamUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAM: 6800/11550 MB"
            android:textColor="#2196F3"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingTop="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

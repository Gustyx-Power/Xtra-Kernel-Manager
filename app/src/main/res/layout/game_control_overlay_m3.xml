<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlayRootContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Floating toggle button (always visible, serves as drag handle) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toggleButtonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Game Toggle Button - AppCompatImageView with vector icon -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gameControlToggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Toggle Game Controls"
                app:srcCompat="@drawable/ic_gamepad"
                app:tint="?attr/colorOnPrimary"
                android:clickable="true"
                android:focusable="true" />

            <!-- Current FPS indicator -->
            <TextView
                android:id="@+id/currentFpsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:text="60 FPS"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Main control panel (hidden by default) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gameControlPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleButtonCard"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title with close button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/panelTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Game Control"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/collapseButton"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Close panel"
                    app:icon="@drawable/ic_close"
                    app:iconTint="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- CPU and GPU Stats in Material 3 styled cards -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CPU: "
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/cpuLoadText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Gov: "
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/cpuGovernorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="unknown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GPU: "
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gpuLoadText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Gov: "
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gpuGovernorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="unknown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Performance Mode Controls - Material 3 Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/performanceChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/defaultModeButton"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default"
                        android:checkable="true"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/batteryModeButton"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery"
                        android:checkable="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/performanceModeButton"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Performance"
                        android:checkable="true" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- Quick Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dndButton"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:contentDescription="Do not disturb"
                    app:icon="@drawable/ic_do_not_disturb" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clearAppsButton"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:contentDescription="Clear background apps"
                    app:icon="@drawable/ic_delete" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsButton"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:contentDescription="Settings"
                    app:icon="@drawable/ic_settings" />
            </LinearLayout>

            <!-- FPS Chart with Material 3 styling -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FPS Chart"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"/>

                    <View
                        android:id="@+id/fpsChart"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="4dp"
                        android:background="?attr/colorSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <!-- Floating toggle button (always visible) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <!-- Game Control Toggle Button -->
        <Button
            android:id="@+id/gameControlToggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🎮"
            android:textSize="16sp"
            android:background="@drawable/circle_button_primary" />

        <!-- Current FPS indicator -->
        <TextView
            android:id="@+id/currentFpsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:background="#80000000"
            android:padding="8dp"
            android:text="60 FPS"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main control panel (hidden by default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/gameControlPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:background="#AA000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title with close button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/panelTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Game Control"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/collapseButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="×"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:background="@drawable/circle_button" />
            </LinearLayout>

            <!-- CPU and GPU Stats -->
            <LinearLayout
                android:id="@+id/statsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU: "
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cpuLoadText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Gov: "
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cpuGovernorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="unknown"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPU: "
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/gpuLoadText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Gov: "
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/gpuGovernorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="unknown"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Performance Mode Controls -->
            <LinearLayout
                android:id="@+id/performanceControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/defaultModeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_button"
                    android:text="Default"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/batteryModeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_button"
                    android:text="Battery"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/performanceModeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_button"
                    android:text="Performance"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Quick Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dndButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_button"
                    android:text="🔕"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/clearAppsButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_button"
                    android:text="🗑️"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/settingsButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_button"
                    android:text="⚙️"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- FPS Chart (simplified) -->
            <TextView
                android:id="@+id/fpsChart"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="#33FFFFFF"
                android:gravity="center"
                android:text="FPS Graph\n(Chart will be here)"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
